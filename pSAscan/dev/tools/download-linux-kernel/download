################################################################################
# download all kernels
################################################################################
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v1.0/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v1.1/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v1.2/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v1.3/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v2.0/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v2.1/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v2.2/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v2.3/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v2.4/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v2.5/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v2.6/
wget -nv -r --no-parent -A linux-*.tar.xz https://www.kernel.org/pub/linux/kernel/v3.0/

################################################################################
# create a folder with all kernel files (at this point as *.tar.xz files),
# copy all packages into that directory, and delete the original packages.
################################################################################
mkdir kernels
for m in `find . -name '*.tar.xz'`;do cp $m ./kernels;done
rm -rf www.kernel.org

################################################################################
# remove the 'rc' and 'dontuse' kernels
################################################################################
find -iname 'linux-*-rc*.tar.xz' -exec rm {} \;
find -iname 'linux-*dontuse*.tar.xz' -exec rm {} \;
